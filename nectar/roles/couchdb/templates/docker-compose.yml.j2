version: "3"
services:
  couch_master:
    image: "ibmcom/couchdb3:3.0.0"
    restart: always
    ports:
      - "5984:5984"
      - "5986:5986"
      - "4369:4369"
      - "9100-9200:9100-9200"
    links:
      - couch_slave1
      - couch_slave2
    volumes:
      - ./data/master/data:/opt/couchdb/data
    environment:
      COUCHDB_USER: {{ database_user }}
      COUCHDB_PASSWORD: {{ database_password }}
      NODENAME: {{ groups['COMP90024'][0] }}
    container_name: couch_master

  couch_slave1:
    image: "ibmcom/couchdb3:3.0.0"
    restart: always
    ports:
      - "15984:5984"
    volumes:
      - ./data/slave1/data:/opt/couchdb/data
    environment:
      COUCHDB_USER: {{ database_user }}
      COUCHDB_PASSWORD: {{ database_password }}
      NODENAME: {{ groups['COMP90024'][1] }}
    container_name: couch_slave1

  couch_slave2:
    image: "ibmcom/couchdb3:3.0.0"
    restart: always
    ports:
      - "25984:5984"
    volumes:
      - ./data/slave2/data:/opt/couchdb/data
    environment:
      COUCHDB_USER: {{ database_user }}
      COUCHDB_PASSWORD: {{ database_password }}
      NODENAME: {{ groups['COMP90024'][2] }}
    container_name: couch_slave2
