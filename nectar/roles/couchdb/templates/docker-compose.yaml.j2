version: "3"
services:
  couch_master:
    image: "ibmcom/couchdb3:3.0.0"
    restart: always
    ports:
      - "5984:5984"
      - "5986:5986"
      - "4369:4369"
      - "9100-9200:9100-9200"
    volumes:
      - {{ couch_db_data_dir }}/data:/opt/couchdb/data
    environment:
      COUCHDB_USER: {{ database_user }}
      COUCHDB_PASSWORD: {{ database_password }}
      NODENAME: {{ groups['COMP90024'][0] }}
    container_name: couch_master