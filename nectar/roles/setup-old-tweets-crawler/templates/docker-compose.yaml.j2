version: '3.7'

services:
  crawler:
    image: 889534/ccc-get-old-tweets:latest
    restart: always
    network_mode: host
    environment:
      HTTPS_PROXY: "http://wwwproxy.unimelb.edu.au:8000"
      DATABASE_USER: {{ database_user }}
      DATABASE_PASSWORD: {{ database_password }}
      DATABASE_HOST: {{ groups['COMP90024'][0] }}
      DATABASE_PORT: {{ database_port }}
      NODE_INDEX: {{ play_hosts.index(inventory_hostname) }}
